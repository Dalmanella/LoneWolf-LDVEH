{% extends 'base.html.twig' %}

{% block title %}LoneWolf Accueil{% endblock %}

{% block body %}

<div class="col-8 text-center mb-5">
    <img class="img-fluid" style="max-width:45%;" src="{{ asset ('assets/img/wolf.png') }}" alt="wolf face symbole" />
    <h1 class="display-3"> Lone Wolf </h1>
</div>
<div class="text-center mt-5">
    <h2 class="display-1"> Flight from the dark </h2>
    <h3 class="display-2"> Joe Dever and Gary Chalk </h3>
</div >

<p class="connexion mt-2 mb-1 display-4" style="font-family:'Dr Sugiyama', cursive;" >Connexion</p>



<div class="form-group mt-1 px-2 form">

    <form 
        action=            
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                 "{{ path('menu') }}" 
            {% else %} 
                "{{ path('accueil') }}"
            {% endif %} 
        method="post" 
        class="form"
    >
        <label for="username" class="">Pseudo</label>
        <input class="mb-1" type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label for="password" class="">Password</label>
        <input type="password" id="password" name="_password"/>

        {# If you want to control the URL the user is redirected to on success #}
        <input type="hidden" name="_target_path" value="/menu"/>

        <div class="d-block mb-2">
            <button type="submit" class="btn btn-primary p-0"><img class="fleches" src="{{ asset ('assets/img/pawprint-brown.png') }}" alt="login button"/></button>
        </div>
    </form>
    {% if error %}
        <div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
</br></br>
</div>
<div>
 <a href="{{ path('inscription') }}" class="text-info mt-2 display-3">Inscription</a>

 
</br></br>
</div>
{% endblock %}
{% block footer %}
        <div class="sticky-bottom">
            <img class="fleches mt-5" src="{{ asset ('assets/img/decoBas.png') }}" />
            </br></br>
{% endblock %}
