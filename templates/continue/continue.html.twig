{% extends 'base.html.twig' %}

{% block title %}LoneWolf création{% endblock %}

{% block header %}
    {{ include('entete/_entetemenu.html.twig') }}    
{% endblock %}

{% block body %}

<h2 class="mt-3 mb-3 "> Your Lonewolf heroes </h2>
<div class="container-fluid mt-1 d-flex justify-content-center">
  <table class="table table-striped " style="width:90%;">
    <thead class="nanum">
      <tr>
          <th scope="col">  </th>
          <th scope="col">Hero</th>
          <th scope="col">C.S.</th>
          <th scope="col">End.</th>
          <th scope="col">Page</th>
          <th scope="col">  </th>
            
      </tr>
    </thead>
    <tbody>

      {% for hero in heroes %}

      <tr>
        
        <td>{% if hero.endurance > 0 %}
          {# concatenation de page_ et du dernier numero de page visitée #}
          {% set p = "page_" ~ hero.page %}
          {% if hero.page == null %}
            {% set p = "page_intro" %}
          {% endif %}
          <a 
            class="btn" 
            id="new_adventure_validation" 
            href="{{ path( p, {'heroId':hero.id} ) }}" >          
          </a>
        {% endif %}  
        </td>
        <th scope="row">{{hero.name}}</th>
        <td>{{hero.combatSkill}}</td>
        <td>{{hero.endurance}}</td>
        <td>       
        {% if hero.page == null %}
            intro
        {% else %}
           {{hero.page}}
        {% endif %}
        </td>
        <td >
          {# Bouton-SUPPR  #}
          <a 
            class="btn-heroDelete"             
            href="{{ path( "heroDel", {'heroId':hero.id} ) }}" 
          >  
            <img 
              src="{{ asset ('assets/img/ico-skullTrash.png') }}" alt="trash - delete hero" 
            />      
          </a>
        </td>
      </tr>

      {% endfor %}

    </tbody>
  </table> 
  </br></br>
</div>

